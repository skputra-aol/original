<%= turbo_frame_tag "modal" do %>
  <%= tag.div data: { controller: "turbo-modal" } do %>
    <div class="flex justify-center items-center fixed z-50 p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-modal md:h-full">
      <div class="relative w-full h-full max-w-md md:h-auto">
        <div class="relative bg-white rounded-lg shadow">
          <h3 class="text-center text-xl font-semibold text-gray-900 text-white">
            New Time Promotion
          </h3>
          <div class="p-6">
            <%= form_tag({ controller: "time_promotions", action: "create" },
                         method: "post",
                         id: "form",
                         data: { action: "turbo:submit-end->turbo-modal#submitEnd" }) do %>
              <label for="label" class="block font-bold">
                Label
              </label>
              <%= text_field_tag :label, "",
                                 id: "label",
                                 required: true,
                                 class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block shadow-sm sm:text-sm border-gray-300 rounded-md"
              %>

              <label for="discount" class="block font-bold">
                Discount
              </label>
              <%= number_field_tag :discount, nil,
                                   min: 1,
                                   max: 100,
                                   step: 1,
                                   id: "discount",
                                   required: true,
                                   class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block shadow-sm sm:text-sm border-gray-300 rounded-md"
              %>

              <label for="start_time" class="block font-bold">
                Start time
              </label>
              <%= datetime_field_tag :start_time, nil,
                                     id: "start_time",
                                     class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block shadow-sm sm:text-sm border-gray-300 rounded-md",
                                     required: true
              %>

              <label for="end_time" class="block font-bold">
                End time
              </label>
              <%= datetime_field_tag :end_time, nil,
                                     id: "end_time",
                                     class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block shadow-sm sm:text-sm border-gray-300 rounded-md",
                                     required: true
              %>
            <% end %>
            <%= tag.div class: "mt-3" do %>
              <%= button_tag "Cancel", data: { action: "turbo-modal#hideModal" },
                             type: "button",
                             class: "inline-flex items-center px-4 py-2 border rounded-md shadow-sm text-sm font-medium focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-50 border-gray-300 text-gray-700 bg-white hover:bg-gray-50" %>
              <%= primary_form_action_button do %>
                Create Time Promotion
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>